<style>
    /* DESCRIPTION CARD */
    a:hover .description__card{
        opacity: 1;
        bottom: -2%;
    }
    /* HOVER CICLA */
    a:hover .bicicleta{
        transform: translateX(-40px)
    }
    /* SPAN */
    .card__span--hover{
        transform: scale(0);
    }
    a:hover .card__span--hover{
        transform: scale(1);
        left: 0;
    }
    a:hover span svg{
        stroke: white;
    }
    a:hover span{
        border: 1px solid rgb(96, 96, 96);
    }
    /* PARTICLE */
    a:hover .particle{
        opacity: 1;
        top: -10%;
    }
    .particle img{
        animation: particula-1 10s infinite alternate-reverse;
    }
    @keyframes particula-1  {
        0%,
        100%{
            transform: translateY(-12px);
        }
        50%{
            transform: translateY(22px) rotate(-10deg);
        }
        
    }
</style>